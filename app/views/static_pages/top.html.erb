<h1>トップページ</h1>

<p>ログインしているユーザーのID<%= session[:user_id] %></p>
<% if logged_in? %>
  <%= link_to "プロフィール詳細へ", user_path(current_user.id), class: "btn btn-warning" %>
  <%= link_to '日焼け止め一覧へ', sunscreens_path, class:"btn btn-accent" %>
  <% if current_user.schedules.schedule_at_today.present? %>
    <%= link_to "スケジュール詳細へ", schedule_path(current_user.schedules.schedule_at_today.first), class: "btn danger "%>
  <% else %>
    <%= link_to "スケジュール登録へ", new_schedule_path, class: "btn danger" %>
  <% end %>
<% else %>
  <%= link_to '日焼け止め一覧へ', sunscreens_path, class:"btn btn-accent" %>
<% end %>
