<h1 class="text-3xl text-black pb-6">日焼け止め</h1>
<%= link_to '日焼け止め登録', new_admin_sunscreen_path, class: 'btn btn-wide bg-orange-400 hover:bg-orange-300 text-black border-0 mt-5 mb-4' %>
<div class="w-full mt-12">
  <p class="text-xl pb-3 flex items-center">データ件数: <%= @sunscreens.count %></p>
  <div class="w-full mt-12">
    <p class="text-xl pb-3 flex items-center">
      <i class="fas fa-list mr-3"></i>
      All Sunscreens
    </p>
    <div class="bg-white overflow-auto">
      <table class="min-w-full bg-white">
        <thead class="bg-gray-800 text-white">
          <tr>
            <th class="w-1/3 text-left py-3 px-4 uppercase font-semibold text-sm">ID</th>
            <th class="w-1/3 text-left py-3 px-4 uppercase font-semibold text-sm">name</th>
            <th class="w-1/3 text-left py-3 px-4 uppercase font-semibold text-sm">spf</th>
            <th class="w-1/3 text-left py-3 px-4 uppercase font-semibold text-sm">pa</th>
            <th class="text-left py-3 px-4 uppercase font-semibold text-sm">btn</th>
          </tr>
        </thead>
        <tbody class="text-gray-700">
        <% @sunscreens.each_with_index do |sunscreen, i|  %>
          <% color_class = 'bg-gray-200' if i.odd? %>
          <tr class="<%= color_class %>">
            <td class="w-1/3 text-left py-3 px-4">
              <%= sunscreen.id %>
            </td>
            <td class="w-1/3 text-left py-3 px-4">
              <%= sunscreen.name %>
            </td>
            <td class="text-left py-3 px-4">
              <%= sunscreen.spf_i18n %>
            </td>
            <td class="text-left py-3 px-4">
              <%= sunscreen.pa_i18n %>
            </td>
            <td class="text-left py-3 px-4">
              <%= link_to "詳細", edit_admin_sunscreen_path(sunscreen), class: "btn" %>
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
