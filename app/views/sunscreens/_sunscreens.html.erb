<% @sunscreens.each do |sunscreen| %>
  <div class="card shadow bg-base-100 mb-3 mt-5">
    <div class="card-body">
      <h2 class="card-title text-1xl font-bold"><%= sunscreen.name %></h2>
      <p>SPF:<%= sunscreen.spf_i18n %></p>
      <p>PA:<%= sunscreen.pa_i18n %></p>
      <p>値段:<%= sunscreen.price %>円</p>
      <p>タグ:
        <% sunscreen.tags.each do |tag| %>
          <span class="text-xs font-semibold inline-block py-1 px-2 uppercase rounded-full text-cyan-600 bg-cyan-200 uppercase last:mr-0 mr-1">
            <%= link_to tag.name, search_sunscreens_path(tag_id: tag.id) %>
          </span>
        <% end %>
      </p>
    </div>
    <div class='link text-center mb-5'>
      <%= link_to "日焼け止め詳細へ", sunscreen_path(sunscreen.id), class: "btn btn-wide bg-orange-400 hover:bg-orange-300 text-black border-0 mt-5 mb-5" %>
    </div>
  </div>
<% end %>
